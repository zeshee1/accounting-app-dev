<!DOCTYPE html>
<html>
<head>
  <title>Product-wise Revenue Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    body {
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    color: #495057;
    transition: background-color 0.3s ease;

    /* ‚úÖ New background image settings */
    background-image: url('/img/bg.jpg'); /* Ensure this image exists */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-color: #e9ecef; /* fallback color */
}
    #searchInput {
      max-width: 300px;
      margin: 20px auto;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">üìä Product-wise Revenue Report</h2>

    <!-- üîç Search Bar -->
    <div class="text-center mb-3">
      <input type="text" id="searchInput" class="form-control" placeholder="üîç Search by product name...">
    </div>

    <!-- üìã Report Table -->
    <table class="table table-bordered table-striped table-hover" id="revenueTable">
      <thead class="table-dark">
        <tr>
          <th>Sr #</th>
          <th>Product</th>
          <th>Unit</th>
          <th>Total Quantity</th>
          <th>Total Revenue</th>
          <th>Gross Rate (Rs/unit)</th>
        </tr>
      </thead>
      <tbody>
        <% if (productWiseRevenue.length === 0) { %>
          <tr><td colspan="6" class="text-center text-danger">No data found</td></tr>
        <% } else { %>
          <% productWiseRevenue.forEach((prod, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= prod.product %></td>
              <td><%= prod.unit %></td>
              <td><%= prod.totalQty %></td>
              <td>Rs. <%= prod.totalAmount.toFixed(2) %></td>
              <td>
                <% if (prod.totalQty > 0) { %>
                  Rs. <%= (prod.totalAmount / prod.totalQty).toFixed(2) %>
                <% } else { %>
                  N/A
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>

    <!-- üîô Back Button -->
    <div class="text-center mt-4">
      <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
    </div>
  </div>

  <!-- üîç Search Script -->
  <script>
    document.getElementById('searchInput').addEventListener('input', function () {
      const searchTerm = this.value.toLowerCase();
      const rows = document.querySelectorAll('#revenueTable tbody tr');
      rows.forEach(row => {
        const productName = row.children[1]?.textContent.toLowerCase() || '';
        row.style.display = productName.includes(searchTerm) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
