<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>All Purchase Invoices</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h3 class="mb-4">All Purchase Invoices</h3>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Invoice ID</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Total Amount</th>
                    <th>Signature</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% invoices.forEach(function(inv) { %>
                    <tr>
                        <td><%= inv.invoiceId %></td>
                        <%= inv.customerName %>
                        <td><%= inv.date %></td>
                        <td><%= inv.totalAmount.toFixed(2) %></td>
                        <td><%= inv.signatureFile ? '✅' : '❌' %></td>
                        <td><a href="/purchase-invoice/<%= inv.invoiceId %>" class="btn btn-sm btn-primary">View</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
