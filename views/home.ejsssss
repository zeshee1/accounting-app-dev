<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home | Saddiqi Brothers</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    /* Same styling as before */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #e3f2fd, #f1f8e9);
      color: #333;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    header {
      background: linear-gradient(to right, #283593, #1a237e);
      color: white;
      padding: 30px 20px;
      text-align: center;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
    main { flex: 1; padding: 50px 20px; text-align: center; }
    main p { font-size: 20px; margin-bottom: 40px; color: #444; }
    .btn-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 25px;
    }
    .btn {
      background: linear-gradient(135deg, #3949ab, #1e88e5);
      color: white;
      padding: 15px 35px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      text-decoration: none;
      font-weight: 600;
      box-shadow: 0 4px 8px rgba(0,0,0,0.15);
      transition: transform 0.2s ease, box-shadow 0.3s ease;
    }
    .btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 16px rgba(0,0,0,0.2);
    }
    footer {
      text-align: center;
      padding: 20px;
      background-color: #e8eaf6;
      color: #555;
      font-size: 14px;
      border-top: 1px solid #ccc;
    }
    @media (max-width: 600px) {
      .btn { width: 80%; }
    }
  </style>
</head>
<body>
  <header>
    <h1>Saddiqi Brothers Accounting Software</h1>
  </header>

  <main>
    <p>Welcome to the Saddiqi Brothers Scrap Dealing Management System.</p>

    <div class="btn-container">
      <a class="btn" href="/sales">📦 Sales</a>
      <a class="btn" href="/purchase">🛒 Purchase</a>
      <a class="btn" href="/invoice">📝 Create Invoice</a>
      <a class="btn" href="/invoice/all">📄 View All Invoices</a>
      <a class="btn" href="/expense">💸 Add Expense</a>
      <a class="btn" href="/expense/all">📋 View Expenses</a>
      <a class="btn" href="/dashboard">📊 Dashboard</a>
      <a class="btn" href="/summary-form">📅 Daily Summary</a> <!-- New Button -->
      <a href="/salary-report"><i class="fas fa-chart-line"></i> Salary Report</a>
    </div>
  </main>

  <footer>
    <p>&copy; 2025 Saddiqi Brothers. All rights reserved.</p>
  </footer>
</body>
</html>
